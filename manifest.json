{
    "manifest_version": 3,
    "name": "ReadAnything",
    "description": "Read anything with the power of AI",
    "version": "0.4.0",
    "permissions": ["contextMenus", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "/icons/icon.png",
        "48": "/icons/icon.png",
        "128": "/icons/icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "/icons/icon.png",
      "48": "/icons/icon.png",
      "128": "/icons/icon.png"
    }
  }
  